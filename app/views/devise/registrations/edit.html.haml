.contents
  %h2 アカウント編集
%hr{width:"90%"}/
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = render "devise/shared/error_messages", resource: resource
  .contents
    = f.label :メールアドレス
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email", class: 'input__title'
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  %hr{width:"90%"}/
  .contents
    パスワード変更（変更しない場合は空欄のまま更新してください）
    %br
    = f.label :新パスワード
    %br/
    = f.password_field :password, autocomplete: "new-password", class: 'input__title'
    - if @minimum_password_length
      %br/
      %em
        ＊
        = @minimum_password_length
        文字以上
  .contents
    = f.label :新パスワード更新用
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password", class: 'input__title'
  .contents
    = f.label :現在のパスワード
    %br/
    = f.password_field :current_password, autocomplete: "current-password", class: 'input__title'
  %hr{width:"90%"}/
  .contents
    = f.submit "更新する", class: 'post'
    %hr{width:"90%"}/
    %h2 アカウント削除
    %p
      #{button_to "このアカウントを削除する", registration_path(resource_name), data: { confirm: "本当に削除してよろしいですか？" }, method: :delete}
    = link_to "戻る", :back
