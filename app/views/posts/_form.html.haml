= form_with model: @post do |f|

  - if @post.errors.any?
    #error_explanation
      %h2
        = @post.errors.count
        件のエラーが発生したため保存ができませんでした。
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg
  %p
    = f.label :title, "タイトル"
    %br
    = f.text_field :title, class: 'input__title'
  %p
    = f.label :content, "内容"
    %br
    = f.text_area :content, cols: 65, rows: 10, class: 'input__text'
    %hr{width: "40%"}/
    
    = f.label :title, "画像(5枚までアップできます)"
    %br
    = f.fields_for :pictures, @pictures do |i|
      .dropzone-container
        .sell-uploads-drop
          #exhibit-images-preview
        .dropzone-area
          = i.label :picture, for: 'upload-image' do
            .sell_upload__area
              = i.file_field :picture, multiple: true, name: 'pictures[picture][]', id: 'upload-image', class: 'upload-image', 'data-image': 0, style: 'opacity: 0'
    %p
    %hr{width: "40%"}/
    = f.submit class: 'post', value: '更新する'  

  %hr{width: "40%"}/
  
  %br
  .contents__buttom
    = link_to 'トップページ', root_path, class: 'post'
  %br
  .contents__logo
    = image_tag "Dipressd_man.png", size:'100x100'
